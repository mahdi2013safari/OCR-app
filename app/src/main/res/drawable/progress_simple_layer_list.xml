<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <corners
                android:radius="0dip" />
            <gradient
                android:startColor="@color/activity_background"
                android:centerColor="@color/activity_background"
                android:centerY="0.1"
                android:endColor="@color/activity_background"
                android:angle="270" />
        </shape>
    </item>
    <item
        android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners
                    android:radius="0dip" />
                <gradient
                    android:startColor="@color/colorPrimaryLight"
                    android:endColor="@color/colorPrimaryLight"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="0dip" />
                <gradient
                    android:startColor="@color/colorPrimaryLight"
                    android:endColor="@color/colorPrimaryLight"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>